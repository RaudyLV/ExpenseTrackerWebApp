@model ExpenseTrackerWebApp.ViewModels.LoginVM;


@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-controller="Auth" method="post" class="card p-4 shadow-sm">
    <div class="form-group">
        <label asp-for="@Model.Email" class="control-label"></label>
        <input asp-for="@Model.Email" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Password" class="control-label"></label>
        <input asp-for="@Model.Password" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" id="IsPersistent" name="IsPersistent" class="form-check-input" />
        <label asp-for="@Model.IsPersistent" class="form-check-label">Remember Me</label>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary ">Sign in</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary " data-dismiss="modal">Cancel</a>
    </div>

    <div asp-validation-summary="All" class="text-danger mt-3"></div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

